FROM maven:3.8-ibmjava-alpine as builder
WORKDIR /app
COPY ./my-app .
RUN mvn versions:set -DnewVersion=1.0.50
RUN mvn -B  clean package 
RUN mkdir artifact && cp target/*.jar artifact

FROM fabric8/java-alpine-openjdk8-jre
WORKDIR /app
#copy application jar (with libraries inside)
COPY --from=builder my-app/target/my-app*.jar ./app/my-app.jar
CMD ["/usr/bin/java", "-jar", "/app/my-app.jar"]

